$('.question-errors').html('<%= render 'shared/errors', resource: @question %>');

<% unless @question.errors.present? %>
  $('.questions .question-title').text('<%= @question.title %>');
  $('.questions .question-body').text('<%= @question.body %>');
  $('.questions .question-files').html('<%= render 'shared/attachments', resource: @question%>')
  $('form#edit-question-' + <%= @question.id %>).addClass('hidden');
  $('.edit-question-link').show()
<% end %>

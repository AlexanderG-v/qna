document.querySelector('.answer-errors').innerHTML = '<%= render 'shared/errors', resource: @answer %>';

<% if @answer.persisted? %>
  window.location.reload()
  document.querySelector('.answers').insertAdjacentHTML('beforeend', '<%= j render @answer %>')
  document.querySelector('.new-answer #answer_body').value = ''
  document.querySelector('.new-name').value = ''
  document.querySelector('.new-url').value = ''
  document.querySelector('.nested-fields').remove()
<% end %>
